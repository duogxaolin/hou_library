<%
let returnMsg = '';
let username = '';
let password = '';
if (typeof submit !== 'undefined') {
    let execution = '149ab0f5-39b9-437d-a679-8d7cfdb1f1d0_%3D%3D';
    username = username;
    password = password;
    let formData = `username=${username}&password=${password}&g-recaptcha-response=&execution=${execution}&_eventId=submit&geolocation=`;
    let xhr = new XMLHttpRequest();
    xhr.open("POST", "https://cas.hou.edu.vn/cas/login", true);
    xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
    xhr.onreadystatechange = function () {
        if (xhr.readyState === 4) {
            if (xhr.status === 200) {
                let contentInAlert = extractContentInAlert(xhr.responseText);
                if (contentInAlert) {
                    returnMsg = contentInAlert;
                } else {
                    returnMsg = '<div class="alert alert-success">Đăng nhập thành công</div>';
                }
            } else {
                console.error(xhr.statusText);
            }
        }
    };
    xhr.send(formData);
}

function extractContentInAlert(html) {
    let parser = new DOMParser();
    let doc = parser.parseFromString(html, 'text/html');
    let elements = doc.getElementsByTagName('div');
    for (let element of elements) {
        if (element.getAttribute('class') === 'alert alert-danger') {
            return element.outerHTML;
        }
    }
    return null;
}
%>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Custom CSS -->
        <style>
            body {
                background-color: #f8f9fa;
            }
            
            .form-container {
                max-width: 400px;
                margin: 50px auto;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
                background-color: #fff;
            }
            
            .form-title {
                text-align: center;
            }
            
            .btn-submit {
                width: 100%;
            }
        </style>
    </head>

    <body>

        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="form-container">
                        <h2 class="form-title">Login</h2>
                        <form action="" method="POST">
                            <%= returnMsg %>
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control" id="username" name="username" value="<%= username %>" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password" value="<%= password %>" required>
                                </div>
                                <button type="submit" id="submit" name="submit" class="btn btn-primary btn-submit">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    </body>

    </html>